@model SettlementManager.Models.Settlement 

@{
    ViewData["Title"] = "Создание нового поселения";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="AddSettlement" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- Добавьте дополнительные поля по мере необходимости -->
    
    <button type="submit" class="btn btn-primary">Создать поселение</button>
    <a asp-controller="Settlement" asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>

<!-- Валидация модели -->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}